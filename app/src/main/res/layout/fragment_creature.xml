<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".CreatureFragment">
    <!-- Search item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RaisedBox">
        <EditText
            android:id="@+id/search_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/search_hint_creature"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"/>
        <Button
            android:id="@+id/search_button"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:theme="@style/RaisedButton"
            android:text="@string/search" />
    </LinearLayout>
    <GridLayout
        android:id="@+id/category_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_margin="1dp"
        android:useDefaultMargins="false"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:animateLayoutChanges="true"
        android:alignmentMode="alignBounds"/>
    <LinearLayout
        android:id="@+id/category_header_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RaisedBoxTouchable"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/category_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Category Title"
            android:gravity="center"
            android:drawableStart="@drawable/ic_arrow_left"
            style="@style/BigTitleText"/>
    </LinearLayout>
    <ListView
        android:id="@+id/category_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:padding="4dp"
        android:dividerHeight="3dp"
        tools:visibility="gone"/>
    <!-- Item info -->
    <ScrollView
        android:id="@+id/item_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/RaisedBox">
                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="Item name"
                    android:drawableStart="@drawable/ic_arrow_left"
                    style="@style/BigTitleText"/>
                <TextView
                    android:id="@+id/item_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Look text"
                    android:textColor="@color/TibiaLookColor"/>
            </LinearLayout>
            <!-- Bought by box -->
            <LinearLayout
                android:id="@+id/buyers_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/RaisedBox">
                <TextView
                    android:id="@+id/buyers_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bought_by"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    style="@style/TitleText"/>
                <LinearLayout
                    android:id="@+id/item_buyers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>
            </LinearLayout>
            <!-- Bought by box -->
            <LinearLayout
                android:id="@+id/sellers_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/RaisedBox">
                <TextView
                    android:id="@+id/sellers_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sold_by"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    style="@style/TitleText"/>
                <LinearLayout
                    android:id="@+id/item_sellers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>
            </LinearLayout>
            <!-- Dropped by box -->
            <LinearLayout
                android:id="@+id/drops_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/RaisedBox">
                <TextView
                    android:id="@+id/drops_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dropped_by"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    style="@style/TitleText"/>
                <LinearLayout
                    android:id="@+id/item_drops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>